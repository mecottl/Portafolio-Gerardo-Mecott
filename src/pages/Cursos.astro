---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Cursos - Gerardo Mecott" titlepage="Cursos y Certificaciones">
  <div class="courses-container">
    <div class="course-category">
      <h3 class="category-title">Desarrollo Frontend</h3>
      <div class="courses-list">
        <div class="course-item">
          <div class="course-icon">
            <i class="fas fa-shuttle-space"></i>
          </div>
          <div class="course-content">
            <h4>Astro</h4>
            <p class="course-provider">Youtube - Midudev</p>
            <p class="course-description">Fundamentos avanzados de Astro.</p>
            <div class="course-meta">
              <span class="course-duration">2 horas</span>
              <span class="course-date">Completado: Julio 2025</span>
              <span class="course-status completed">Finalizado</span>
            </div>
          </div>
        </div>

        <div class="course-item">
          <div class="course-icon">
            <i class="fab fa-react"></i>
          </div>
          <div class="course-content">
            <h4>React</h4>
            <p class="course-provider">Youtube - Midudev</p>
            <p class="course-description">Curso completo de React.</p>
            <div class="course-meta">
              <span class="course-duration">20 horas</span>
              <span class="course-date">En progreso</span>
              <span class="course-status in-progress">En curso</span>
            </div>
          </div>
        </div>

        <div class="course-item">
          <div class="course-icon">
            <i class="fab fa-css3-alt"></i>
          </div>
          <div class="course-content">
            <h4>HTML y CSS</h4>
            <p class="course-provider">Youtube - SoyDalto</p>
            <p class="course-description">Uso de HTML y CSS curso completo</p>
            <div class="course-meta">
              <span class="course-duration">24 horas</span>
              <span class="course-date">En progreso</span>
              <span class="course-status in-progress">En curso</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="course-category">
      <h3 class="category-title">Desarrollo Backend</h3>
      <div class="courses-list">
        <div class="course-item">
          <div class="course-icon">
            <i class="fab fa-node-js"></i>
          </div>
          <div class="course-content">
            <h4>Node.js - Desarrollo Backend</h4>
<p class="course-provider">Youtube - Midudev</p>
            <p class="course-description">Curso completo de NodeJs.</p>
            <div class="course-meta">
              <span class="course-duration">11 horas</span>
              <span class="course-date">Completado: Julio 2025</span>
              <span class="course-status completed">Finalizado</span>
            </div>
          </div>
        </div>

        <div class="course-item">
          <div class="course-icon">
            <i class="fas fa-database"></i>
          </div>
          <div class="course-content">
            <h4>SQL - Base de Datos</h4>
            <p class="course-provider">Youtube - SoyDalto</p>
            <p class="course-description">
              Diseño de esquemas, agregaciones y optimización de consultas
            </p>
            <div class="course-meta">
              <span class="course-duration">7 horas</span>
              <span class="course-date">Completado: Junio 2024</span>
              <span class="course-status completed">Finalizado</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="course-category">
      <h3 class="category-title">Herramientas y DevOps</h3>
      <div class="courses-list">
        <div class="course-item">
          <div class="course-icon">
            <i class="fab fa-git-alt"></i>
          </div>
          <div class="course-content">
            <h4>Git y GitHub Profesional</h4>
            <p class="course-provider">YouTube - SoyDalto</p>
            <p class="course-description">
              Control de versiones, branching strategies y colaboración en
              equipo
            </p>
            <div class="course-meta">
              <span class="course-duration">4 horas</span>
              <span class="course-date">Completado: Septiembre 2024</span>
              <span class="course-status completed">Finalizado</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
